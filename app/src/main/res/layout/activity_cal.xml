<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back0"
    tools:context=".DashboardUserActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@drawable/shape_toolbar02">

        <TextView
            android:id="@+id/titleTv"
            android:layout_width="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            android:text="Dashboard Calculator"
            android:textStyle="bold"
            android:textColor="@color/white"/>
        <ImageButton
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@android:color/transparent"
            android:padding="5dp"
            android:src="@drawable/ic_back_white" />



        <ImageButton
            android:id="@+id/logoutBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="18dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_logout_white"
            tools:ignore="SpeakableTextPresentCheck,TouchTargetSizeCheck" />



    </RelativeLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity">

        <EditText
         android:id="@+id/Edtfst"
         android:hint="First Number"
         android:inputType="number"
         android:layout_margin="10dp"
         android:layout_width="300dp"
         android:layout_height="50dp"/>
         <EditText
         android:id="@+id/Edtscnd"
         android:hint="Second Number"
         android:inputType="number"
        android:layout_margin="10dp"
         android:layout_width="300dp"
         android:layout_height="50dp"/>
        <LinearLayout
        android:layout_marginTop="15dp"
            android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatButton
       android:id="@+id/mBtnAdd"
        android:layout_margin="2dp"
        android:textSize="40dp"
       android:textStyle="bold"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            android:text="+"
            android:background="@drawable/shape_button01"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="70dp"/>
        <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/mBtnSubtrac"
         android:layout_margin="2dp"
        android:textSize="40dp"
         android:textStyle="bold"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:text="-"
            android:background="@drawable/shape_button01"
         android:layout_weight="1"
         android:layout_width="match_parent"
         android:layout_height="70dp"/>
        <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/mBtnMultiple"
         android:layout_margin="2dp"
         android:textSize="40dp"
         android:textStyle="bold"
         android:textAllCaps="false"
         android:textColor="#ffffff"
         android:text="*"
            android:background="@drawable/shape_button01"
         android:layout_weight="1"
         android:layout_width="match_parent"
         android:layout_height="70dp"/>
       <androidx.appcompat.widget.AppCompatButton
       android:id="@+id/mBtnDivide"
           android:layout_margin="2dp"
        android:textSize="40dp"
       android:textStyle="bold"
        android:textAllCaps="false"
         android:textColor="#ffffff"
         android:text="/"
           android:background="@drawable/shape_button01"
         android:layout_weight="1"
         android:layout_width="match_parent"
         android:layout_height="70dp"/>

         </LinearLayout>


    <TextView
    android:id="@+id/TxtResult"
    android:textSize="30dp"
   android:layout_marginTop="150dp"
    android:text="Answer"
    android:layout_width="wrap_content"
   android:layout_height="wrap_content"/>



</LinearLayout>










    


</RelativeLayout>